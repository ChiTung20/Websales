@model DA.Models.Page

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">

    <div class="breadcrumb breadcrumb-dash">
        <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
        <a asp-area="Admin" asp-controller="AdminPages" asp-action="Index" class="breadcrumb-item">Danh sách Page</a>
        <span class="breadcrumb-item active">Thông tin Page : @Model.PageName</span>
    </div>


    <div class="card shadow mb-4">

        <div class="card-header py-3">
            @*<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">*@
            @*<div class="page-header no-gutters has-tab">*@
            @*<div class="d-md-flex m-b-15 align-items-center justify-content-between">*@
            @*<div class="media align-items-center m-b-15">*@
            <div class="row">
                <div class="form-group col-md-1">
                    <img style="height:70px; width:70px" src="~/images/pages/@Model.Thumb" alt="@Model.Title" />
                </div>
                <div class="form-group col-md-11">
                    <h4 class="m-b-0">@Model.PageName</h4>
                    <p class="text-muted m-b-0">ID: #@Model.PageId</p>
                </div>
            </div>
            @*</div>*@
            @*</div>*@
            @*</div>*@
        </div>
        <div class="card-body">
            <div class="card-body">
                <div class="form-group">
                    <div class="form-group col-md-6">
                        <div>
                            <div class="row">
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.PageName)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.PageName)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Contents)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Contents)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Published)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Published)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Thumb)
                                </dt>
                                <dd class="col-sm-10">
                                    @*@Html.DisplayFor(model => model.Thumb)*@
                                    <div class="form-group col-md-1">
                                        <img style="height:200px; width:200px" src="~/images/pages/@Model.Thumb" alt="@Model.Title" />
                                    </div>
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Title)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Title)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.MateDesc)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.MateDesc)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.MetaKey)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.MetaKey)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Alias)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Alias)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.CreatedAt)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.CreatedAt)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Ordering)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Ordering)
                                </dd>
                            </div>
                        </div>
                    </div>
                </div>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.PageId" class="btn btn-primary">Edit</a>
                    <a asp-action="Index" class="btn btn-secondary">Back to list </a>
                </div>

                </table>

            </div>
        </div>
    </div>
</div>



