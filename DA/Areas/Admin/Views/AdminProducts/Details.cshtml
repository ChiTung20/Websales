@model DA.Models.Product

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="page-header breadcrumb breadcrumb-dash">

        <a asp-area="Amin" asp-action="Index" class="breadcrumb-item "> <i class="topnav-icons fa fa-home w3-left w3-bar-item w3-button"> </i> Dashbroad</a>
        <a class="breadcrumb-item" asp-action="Index"> Danh sách quyền truy cập </a>
        <span class="breadcrumb-item active"> Thông Tin Sản Phẩm </span>
    </div>


    <div class="card shadow mb-4">
        <div class="card-header py-3 ">
            <h2 class="h3 mb-2 text-gray-800">Detail</h2>
        </div>
        <div class="card-body">
            <div class="form-group">
                <div class="form-group col-md-6">
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.ProductName)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ProductName)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.ShortDesc)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ShortDesc)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Description)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Description)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Price)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Price)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Discount)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Discount)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Thumb)
                        </dt>
                        <dd class="col-sm-10">
                            @*@Html.DisplayFor(model => model.Thumb)*@
                            <img  class="figure-img" src="~/adminassets/img/products/@Model.Thumb"  />
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Video)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Video)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.DateCreate)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.DateCreate)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.DateModified)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.DateModified)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.BestSalers)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.BestSalers)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.HomeFlag)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.HomeFlag)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Active)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Active)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Tags)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Tags)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Title)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Title)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Alias)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Alias)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.MetaDesc)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.MetaDesc)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.MetaKey)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.MetaKey)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.UnitslnStock)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.UnitslnStock)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Cate)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Cate.CateId)
                        </dd>
                    </dl>
                </div>

            </div>
            <div class="form-group">
                <a asp-action="Edit" asp-route-id="@Model.ProductId" class="btn btn-primary">Edit</a>
                <a asp-action="Index" class="btn btn-secondary">Back</a>
            </div>
        </div>
    </div>
</div>

